# Start brave browser on Workspace 1
exec brave-browser

# Set background
exec_always feh --bg-scale ~/Pictures/Firewatch.png

# Remove all borders from Windows
new_window none
for_window [class="^.*"] border pixel 1

# Swap Escape and Caps key
exec setxkbmap -option caps:swapescape

# Disable Screen Timeout
exec xset s off
exec -dpms

# Set mouse input options
    # Tapping Enabled
    exec_always xinput set-prop 11 278 1
    # Middle Emulation Enabled
    exec_always xinput set-prop 11 296 1
    # Click Method Enabled
    exec_always xinput set-prop 11 294 {1 1}


# move focused window between monitors
bindsym $mod+Shift+greater move container to output right
bindsym $mod+Shift+less move container to output left 

